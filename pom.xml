<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.ericaro</groupId>
    <artifactId>diezel-reactor</artifactId>
    <name>diezel reactor</name>
    <version>1.0.0-SNAPSHOT</version>
    <description>Reactor for diezel projects</description>
    <packaging>pom</packaging>
    <modules>
    <module>core</module>
    <module>diezel-annotations</module>
    </modules>
    
    
        <properties>
        <googlecode>diezel</googlecode>
        <subname></subname>
    </properties>

    <!-- MAVEN STUFF -->
    <url>http://${googlecode}.googlecode.com/</url>

    <distributionManagement>
        <snapshotRepository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>http://oss.sonatype.org/content/repositories/snapshots</url>
            <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
        <repository>
            <id>sonatype-nexus-staging</id>
            <name>Nexus Release Repository</name>
            <url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <scm>
        <connection>scm:svn:http://${googlecode}.googlecode.com/svn/trunk/${subname}</connection>
        <developerConnection>scm:svn:https://${googlecode}.googlecode.com/svn/trunk/${subname}</developerConnection>
        <url>http://${googlecode}.googlecode.com/svn/trunk/${subname}</url>
    </scm>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>ericaro</name>
            <email>eric@ericaro.net</email>
            <organization>Personal</organization>
            <roles>
                <role>Owner</role>
            </roles>
        </developer>
    </developers>
    
    
</project>